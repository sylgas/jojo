<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.lusy.jojo.journeyjournal">

    <application
        android:name=".JourneyJournal"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.welcome.WelcomeActivity"
            android:label="@string/welcome_activity_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.about.AboutActivity"
            android:label="@string/about_activity_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.details.TripDetailsActivity"
            android:parentActivityName=".view.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.history.HistoryActivity"
            android:label="@string/history_activity_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.plan.TripPlanActivity"
            android:label="@string/plan_activity_label"
            android:parentActivityName=".view.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>